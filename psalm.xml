<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <projectFiles>
        <directory name="src"/>
         <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
    <pluginClass class="Psalm\LaravelPlugin\Plugin"/>
    </plugins>

    <issueHandlers>
        <UndefinedClass>
            <errorLevel type="suppress">
                <referencedClass name="App\Http\Controllers\Controller"/>
                <referencedClass name="App\Models\User"/>
                <referencedClass name="ConsoleTVs\Charts\Classes\Chartjs\Chart"/>
                <referencedClass name="ConsoleTVs\Charts\Classes\Chartjs\Dataset"/>
                <referencedClass name="wapmorgan\UnifiedArchive\UnifiedArchive"/>
                <referencedClass name="Intervention\Image\Facades\Image"/>
                <directory name="src/Notifications"/>
                <directory name="src/Helpers"/>
            </errorLevel>
        </UndefinedClass>

        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="src"/>
                <directory name="tests"/>
            </errorLevel>
        </PropertyNotSetInConstructor>

        <NoInterfaceProperties>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </NoInterfaceProperties>

        <PossiblyUndefinedMethod>
            <errorLevel type="suppress">
                <directory name="src/Http/Controllers"/>
            </errorLevel>
        </PossiblyUndefinedMethod>

        <PossiblyInvalidArgument>
            <errorLevel type="suppress">
                <file name="src/Helpers/Reader.php"/>
                <file name="src/Database/Traits/Build.php"/>
                <file name="src/Services/Auth/AccessTokenGuard.php"/>
            </errorLevel>
        </PossiblyInvalidArgument>

        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="src/Helpers/Reader.php"/>
            </errorLevel>
        </ArgumentTypeCoercion>

        <MoreSpecificReturnType>
            <errorLevel type="suppress">
                <file name="src/Database/MySqlConnection.php"/>
            </errorLevel>
        </MoreSpecificReturnType>

        <ImplementedReturnTypeMismatch>
            <errorLevel type="suppress">
                <file name="src/Database/MySqlConnection.php"/>
            </errorLevel>
        </ImplementedReturnTypeMismatch>

        <LessSpecificReturnStatement>
            <errorLevel type="suppress">
                <file name="src/Database/MySqlConnection.php"/>
                <file name="src/Helpers/Stream.php"/>
            </errorLevel>
        </LessSpecificReturnStatement>

        <UnresolvableInclude>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UnresolvableInclude>

        <UndefinedInterfaceMethod>
            <errorLevel type="suppress">
                <directory name="src"/>
                <directory name="tests"/>
            </errorLevel>
        </UndefinedInterfaceMethod>

         <MissingClosureParamType>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </MissingClosureParamType>

        <InvalidStringClass>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </InvalidStringClass>

        <PossiblyNullArgument>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </PossiblyNullArgument>

        <InvalidMethodCall>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </InvalidMethodCall>

        <InvalidScalarArgument>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </InvalidScalarArgument>

        <LessSpecificImplementedReturnType>
            <errorLevel type="suppress">
                <file name="src/Routing/Responsable.php"/>
            </errorLevel>
        </LessSpecificImplementedReturnType>

        <!-- @todo: Can't get this to work within a package? Ide helper or migrations somehow? -->
        <UndefinedMagicPropertyFetch>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UndefinedMagicPropertyFetch>
        <UndefinedThisPropertyFetch>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UndefinedThisPropertyFetch>
        <UndefinedThisPropertyAssignment>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UndefinedThisPropertyAssignment>
        <UndefinedMagicPropertyAssignment>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </UndefinedMagicPropertyAssignment>
    </issueHandlers>
</psalm>
